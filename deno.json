{
  "lock": false,
  "unstable": ["unsafe-proto", "sloppy-imports"],
  "tasks": {
    "dev": "deno run -A --unstable-detect-cjs npm:next@latest dev",
    "build": "deno run -A --unstable-detect-cjs npm:next@latest build",
    "start": "deno run -A --unstable-detect-cjs npm:next@latest start",
    "export": "deno run -A --unstable-detect-cjs npm:next@latest build && deno run -A --unstable-detect-cjs npm:next@latest export",
    "lint": "deno run -A --unstable-detect-cjs npm:next@latest lint",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/.next/*",
    "**/out/*",
    "**/node_modules/*"
  ],
  "imports": {
    "@std/front-matter": "jsr:@std/front-matter@^1.0.7",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@/": "./src/"
  },
  "compilerOptions": {
  "allowJs": true,
  "jsx": "react-jsx",
  "jsxImportSource": "react",
  "lib": ["dom", "dom.iterable", "esnext"],
  "module": "esnext",
  "moduleResolution": "bundler",
  "strict": true,
  "skipLibCheck": true
  },
  "nodeModulesDir": "auto"
}
